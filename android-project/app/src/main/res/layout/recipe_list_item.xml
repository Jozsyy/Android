<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="414dp"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="16dp">

        <ImageView
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:id="@+id/recipeImageView"
                android:layout_marginRight="4dp"
        />
        <TextView
                android:text="Title"
                android:layout_toEndOf="@+id/recipeImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/recipeItemTitleView"
                android:textSize="20sp"/>
        <TextView
                android:text="Description"
                android:layout_toEndOf="@+id/recipeImageView"
                android:layout_below="@+id/recipeItemTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/recipeItemDescriptionView"
                android:textSize="14sp"
        />
        <Button
                android:text="@string/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/recipeItemDescriptionButton"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp" android:layout_alignParentEnd="true"
                android:layout_marginEnd="270dp" android:layout_marginTop="127dp" android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" android:layout_marginStart="44dp"
                android:backgroundTint="@color/red"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>